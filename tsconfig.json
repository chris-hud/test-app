{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*"
      ],
      "@env": [
        "./src/core/env.js"
      ]
    },
    "esModuleInterop": true,
    "checkJs": true,
    "module": "esnext", // add this line to enable dynamic imports, adding for reactotron
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "ios",
    "lint-staged.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
